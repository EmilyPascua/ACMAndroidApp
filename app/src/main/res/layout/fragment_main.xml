<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".fragment.MainFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/banner1"
            tools:context=".MainActivity"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="126dp"
                    android:src="@drawable/acm_logo_nav" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="arial"
                    android:text="Association of Computer Machinery"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:gravity="center" />
            </LinearLayout>
        </RelativeLayout>
        <android.support.v7.widget.CardView
            cardCornerRadius="10dp"
            cardElevation="@dimen/cardview_default_elevation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="7dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/event_image_url"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:transitionName="img"
                    android:src="@drawable/background1"/>

                <ImageView
                    android:id="@+id/shadow_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_alignBottom="@id/event_image_url"
                    android:src="@drawable/bottom_shadow" />

                <TextView
                    android:id="@+id/event_location"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignStart="@+id/event_name"
                    android:layout_alignLeft="@+id/event_name"
                    android:layout_alignTop="@+id/event_start_end"
                    android:layout_alignEnd="@id/event_start_end"
                    android:layout_alignRight="@id/event_start_end"
                    android:layout_marginStart="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="-90dp"
                    android:layout_marginEnd="159dp"
                    android:layout_marginRight="159dp"
                    android:drawablePadding="10dp"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="adsadsadads"
                    android:textColor="@android:color/white" />

                <FrameLayout
                    android:id="@+id/event_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/event_image_url"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="-50dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/round_white"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_date" />

                    <TextView
                        android:id="@+id/event_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="27dp"
                        android:layout_marginRight="10dp"
                        android:text="01 January 1990"
                        android:textColor="#606060" />
                </FrameLayout>


                <TextView
                    android:id="@+id/event_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/event_image_url"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="16dp"
                    android:fontFamily="sans-serif-light"
                    android:text="MESA Day Volunteerings"
                    android:textColor="@color/colorTextTitle"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/event_start_end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/event_name"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="10dp"

                    android:text="Cal State LA's very own chapter of the Association for Computing Machinery takes care of its members in more ways then one! We do our best to keep you updated on special events as well as ongoing club activities. Here are a few key benefits that you could take advantage of by becoming a member of ACM today!" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

</RelativeLayout>